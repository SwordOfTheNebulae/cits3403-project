    <script>
        document.getElementById("generate-link-button").addEventListener("click", function() {
            // This is a placeholder for actual link generation logic
            const fakeLink = "https://sitename.com/recommendations?user=12345";
            document.getElementById("share-link").value = fakeLink;
        });

        document.getElementById("view-friend-recommendations-button").addEventListener("click", function() {
            const inputLink = document.getElementById("friend-link-input").value;
            if (inputLink.trim() !== "") {
                window.location.href = inputLink;
            }
        });
